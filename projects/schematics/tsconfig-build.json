{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es2017"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "rootDir": "./",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./*/files/**/*",
    "./**/*_spec.ts"
  ],
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true
  }
}
